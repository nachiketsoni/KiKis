    <script>

        gsap.from('.txtanim', {
            stagger: .2,
            duration: .4,
            y: 100,
            opacity: 0,
        })
        document.querySelector('.total button').addEventListener('mouseenter', function (e) {
            var tl = gsap.timeline()
            tl
                // .fromTo("#img", {opacity: 0, left:'-10%',duration: 0.00005}, {opacity: 1, left:'50%'});
                // .to('#img',{opacity: 0, left:'-10%',duration: 0.00005})
                .to('#img', { opacity: 1, left: '50%', ease: Power2.easeInOut })
            document.querySelector('.total button h3').style.opacity = '0';
        });
        document.querySelector('.total button').addEventListener('mouseleave', function (e) {
            var tl = gsap.timeline()
                .to("#img", { left: '110%' })
                .to("#img", { opacity: 0, duration: 0.00005 })
